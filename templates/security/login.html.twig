{% extends 'base.html.twig' %}

{% block title %}
	{{ 'login.title'|trans }}
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.userIdentifier }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}

		<h1 class="mb-3 font-weight-normal">{{ 'login.title'|trans }}</h1>
		<label for="inputEmail">{{ 'Email'|trans }}</label>
		<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-4" autocomplete="email" required autofocus>

		<label for="inputPassword">{{ 'Password'|trans }}</label>
		<input type="password" name="password" id="inputPassword" class="form-control mb-4" autocomplete="current-password" required>

		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

		<button class="btn btn-primary mb-2" type="submit">
			{{ 'login.connection'|trans }}
		</button>
	</form>

	<p>
		{{ 'login.no-account'|trans }}
		<a href="{{ path('app_register') }}">{{ 'login.new-account'|trans }}</a>
	</p>
{% endblock %}

<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
				{{ 'app.title'|trans }}
			{% endblock %}
		</title>
		<link rel="icon" href="{{asset('images/icon.jpg')}}">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
		<link
		rel="stylesheet" href="https://use.fontawesome.com/releases/v6.4.0/css/all.css">

		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
			<link rel="stylesheet" href="{{asset('css/index.css')}}"/>
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}

	</head>
	<body>
		{% block header %}
			<nav class="navbar fixed-top">
				<div class="container-fluid">
					<a class="navbar-brand" href="{{path('app_product_index')}}">
						<img src="{{asset('images/logo.jpg')}}" alt="Crazy Donuts Logo" width="100">
					</a>
					<ul class="navbar-nav flex-row gap-4 ms-auto">
						{% if app.user and 'ROLE_SUPER_ADMIN' in app.user.roles %}
							<li class="nav-item">
								<a class="nav-link" href="{{path('app_super_admin')}}">{{ 'app.navbar.super-admin'|trans }}</a>
							</li>
						{% endif %}
						{% if app.user %}
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
									{{ app.user }}
								</a>
								<ul class="dropdown-menu dropdown-menu-end position-absolute" aria-labelledby="navbarDropdownMenuLink">
									<li>
										<a class="dropdown-item" href="{{path('app_account')}}">{{ 'app.navbar.account'|trans }}</a>
									</li>
									<li>
										<a class="dropdown-item" href="{{path('app_logout')}}">{{ 'app.navbar.logout'|trans }}</a>
									</li>
								</ul>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{path('app_cart')}}">
									<i class="fas fa-shopping-cart"></i>
								</a>
							</li>
						{% else %}
							<li>
								<a class="dropdown-item" href="{{path('app_login')}}">{{ 'app.navbar.login'|trans }}</a>
							</li>
						{% endif %}
					</ul>
				</div>
			</nav>
		{% endblock %}

		<div class="app-container mx-4">
			{% for type, messages in app.flashes %}
				{% for message in messages %}
					<div class="alert alert-{{type}} alert-dismissible" role="alert">
						{{ message }}
					</div>
				{% endfor %}
			{% endfor %}

			{% block body %}{% endblock %}
		</div>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
	</body>
</html>
